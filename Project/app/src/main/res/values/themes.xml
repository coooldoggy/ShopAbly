<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopAbly" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black_12</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/notosanskr</item>
        <item name="fontFamily">@font/notosanskr</item>
        <item name="android:textViewStyle">@style/shopTextViewStyle</item>
        <item name="android:buttonStyle">@style/shopButtonStyle</item>
        <item name="android:editTextStyle">@style/shopEditTextStyle</item>
        <item name="android:actionBarStyle">@style/shopActionBar</item>
    </style>

    <style name="shopActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:fontFamily">@font/notosanskr</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="shopTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/notosanskr</item>
    </style>
    <style name="shopButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/notosanskr</item>
    </style>
    <style name="shopEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/notosanskr</item>
    </style>
</resources>